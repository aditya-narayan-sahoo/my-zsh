# Update system with spinner and timer
spinner() {
  local pid=$1
  local delay=0.1
  local spinstr='|/-\'
  while kill -0 $pid 2>/dev/null; do
    for i in $(seq 0 3); do
      echo -ne "${spinstr:i:1}  \r"
      sleep $delay
    done
  done
  echo -ne "   \r"
}

upgrade() {
  echo "ğŸ”„ Updating system packages..."
  local start=$(date +%s)

  sudo pacman -Syu
  if [[ $? -eq 0 ]]; then
    echo "âœ… System packages updated."
  else
    echo "âŒ Failed to update system packages."
  fi

  echo "ğŸ”„ Updating AUR packages..."
  yay -Syu
  if [[ $? -eq 0 ]]; then
    echo "âœ… AUR packages updated."
  else
    echo "âŒ Failed to update AUR packages."
  fi

  echo "ğŸ”„ Updating Flatpak packages..."
  flatpak update -y
  if [[ $? -eq 0 ]]; then
    echo "âœ… Flatpak packages updated."
  else
    echo "âŒ Failed to update Flatpak packages."
  fi

  local end=$(date +%s)
  echo "â±ï¸ Total update time: $((end - start)) seconds."
}

# Refresh India Mirrorlist and update system, with backup and mirrorlist display
mirrup() {
  echo "ğŸŒ Backing up current mirrorlist..."
  sudo cp /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist.backup.$(date +%Y%m%d_%H%M%S)

  echo "ğŸŒ Refreshing mirrorlist using Reflector..."
  sudo reflector --country India --protocol https --sort rate --save /etc/pacman.d/mirrorlist
  if [[ $? -ne 0 ]]; then
    echo "âŒ Failed to update mirrorlist."
    return 1
  fi

  echo "âœ… Mirrorlist updated successfully."
  echo "ğŸ“¦ Performing full system upgrade with forced database refresh..."

  sudo pacman -Syyu && echo "âœ… System packages updated." || echo "âŒ Failed to update system packages."

  echo "ğŸ”„ Updating AUR packages with forced refresh..."
  yay -Syyu && echo "âœ… AUR packages updated." || echo "âŒ Failed to update AUR packages."

  echo "ğŸ”„ Updating Flatpak packages..."
  flatpak update -y && echo "âœ… Flatpak packages updated." || echo "âŒ Failed to update Flatpak packages."

  echo "ğŸ‰ Full system upgrade complete using refreshed mirrorlist."

  echo ""
  echo "ğŸ“‹ Showing entire updated mirrorlist:"
  echo "-------------------------------------------------"
  cat /etc/pacman.d/mirrorlist
  echo "-------------------------------------------------"
}

# Refresh All Mirrorlist and update system
update-all() {
  local TMPFILE
  TMPFILE=$(mktemp) || {
    echo "Failed to create temp file"
    return 1
  }

  sudo true || {
    echo "sudo failed"
    return 1
  }

  if rate-mirrors --protocol https --save="$TMPFILE" arch --max-delay=21600; then
    # Keep the first 4 comment lines and filter out the rest
    head -n 4 "$TMPFILE" >"$TMPFILE.head"
    grep -v '^#' "$TMPFILE" | sed '1,4d' >>"$TMPFILE.head"
    sudo mv /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist-backup
    sudo mv "$TMPFILE.head" /etc/pacman.d/mirrorlist
    rm -f "$TMPFILE" "$TMPFILE.head"

    drop-caches

    echo "[32m::[0m [1m[69mSynchronizing Pacman databases and upgrading system packages...[0m"
    sudo pacman -Syyu --noconfirm

    echo "[32m::[0m [1m[70mSynchronizing AUR helpers and upgrading AUR packages...[0m"
    yay -Syyu --noconfirm
  else
    echo "[31m::[0m [1m[31mrate-mirrors failed to find suitable HTTPS mirrors. Aborting update.[0m"
    rm -f "$TMPFILE"
    return 1
  fi
}

# Clean caches with selective flags and --force
cclean() {
  local force=false
  local clean_docker=false
  local clean_npm=false

  # Parse flags
  for arg in "$@"; do
    case $arg in
    --force | -f) force=true ;;
    --docker) clean_docker=true ;;
    --npm) clean_npm=true ;;
    esac
  done

  echo "ğŸ§¹ Cleaning pacman cache (keeping one version)..."
  sudo pacman -Sc --noconfirm

  if $force; then
    echo "ğŸ§¹ Cleaning full pacman cache (all versions) (forced)..."
    sudo pacman -Scc --noconfirm
  else
    read "confirm_pacman?ğŸ—‘ï¸ Delete all cached pacman packages? (y/N): "
    if [[ $confirm_pacman =~ ^[yY]$ ]]; then
      sudo pacman -Scc --noconfirm
    else
      echo "â­ï¸ Skipped full pacman cache clean."
    fi
  fi

  if command -v yay >/dev/null 2>&1; then
    echo "ğŸ§¹ Cleaning yay cache (keeping one version)..."
    yay -Sc --noconfirm

    if $force; then
      echo "ğŸ§¹ Cleaning full yay cache (all versions) (forced)..."
      yay -Scc --noconfirm
    else
      read "confirm_yay?ğŸ—‘ï¸ Delete all cached yay packages? (y/N): "
      if [[ $confirm_yay =~ ^[yY]$ ]]; then
        yay -Scc --noconfirm
      else
        echo "â­ï¸ Skipped full yay cache clean."
      fi
    fi
  else
    echo "âš ï¸ yay not found â€” skipping AUR cache cleanup."
  fi

  if command -v flatpak >/dev/null 2>&1; then
    echo "ğŸ§¹ Cleaning Flatpak unused runtimes..."
    flatpak uninstall --unused -y && echo "âœ… Flatpak unused runtimes removed." || echo "âŒ Failed to clean Flatpak."
  else
    echo "âš ï¸ flatpak not found â€” skipping Flatpak cleanup."
  fi

  echo "ğŸ§¾ Vacuuming journal logs older than 7 days..."
  sudo journalctl --vacuum-time=7d && echo "âœ… Journal logs cleaned." || echo "âŒ Failed to vacuum journal logs."

  if $clean_docker && command -v docker >/dev/null 2>&1 && systemctl is-active --quiet docker; then
    echo "ğŸ³ Cleaning up Docker..."
    docker system prune -af --volumes && echo "âœ… Docker system pruned." || echo "âŒ Failed to clean Docker."
  else
    echo "âš ï¸ Skipped Docker cleanup."
  fi

  if $clean_npm && command -v npm >/dev/null 2>&1 && [[ -d "$HOME/.npm" ]]; then
    echo "ğŸ“¦ Cleaning npm cache..."
    npm cache clean --force && echo "âœ… npm cache cleaned." || echo "âŒ Failed to clean npm cache."
  else
    echo "âš ï¸ Skipped npm cleanup."
  fi

  echo "âœ… All available caches cleaned."
}

# Git add, commit, push with message validation and basic completion
gac() {
  if [[ -z "$1" ]]; then
    echo "âŒ Error: Commit message is required."
    echo "ğŸ’¡ Usage: gac \"Your commit message here\""
    return 1
  fi

  if ! git rev-parse --git-dir >/dev/null 2>&1; then
    echo "âŒ Error: Not a git repository."
    return 1
  fi

  echo "ğŸ“‚ Staging all changes..."
  git add .

  echo "ğŸ“ Committing with message: \"$*\""
  if ! git commit -m "$*"; then
    echo "âš ï¸ Commit failed. Possibly nothing to commit?"
    return 1
  fi

  current_branch=$(git symbolic-ref --short HEAD 2>/dev/null)
  if [[ -z "$current_branch" ]]; then
    echo "âŒ Error: Could not determine the current branch."
    return 1
  fi

  echo "ğŸš€ Pushing to branch '$current_branch'..."
  if git push origin "$current_branch"; then
    echo "âœ… All done! Changes pushed to '$current_branch'."
  else
    echo "âŒ Push failed."
    return 1
  fi
}

# Basic completion support for gac (shows a hint)
_gac() {
  compadd -- "Your commit message here"
}

compdef _gac gac

# System health check report
syshealth() {
  echo "ğŸ–¥ï¸  System Health Report"

  echo -n "CPU Usage: "
  top -bn1 | grep "Cpu(s)" | awk '{print $2 + $4 "%"}'

  echo -n "Memory Usage: "
  free -h | awk '/^Mem:/ {print $3 " used / " $2 " total"}'

  echo -n "Disk Usage (root): "
  df -h / | awk 'NR==2 {print $3 " used / " $2 " total (" $5 " used)"}'

  if command -v sensors >/dev/null 2>&1; then
    echo "ğŸŒ¡ï¸ Temperature sensors:"
    sensors | grep -E 'temp[1-9]_input|Core'
  else
    echo "âš ï¸ sensors command not found. Install 'lm_sensors' for temperature info."
  fi

  echo "ğŸŸ¢ Services status (docker, sshd):"
  for svc in docker sshd; do
    if systemctl is-active --quiet "$svc"; then
      echo " âœ” $svc running"
    else
      echo " âŒ $svc not running"
    fi
  done
}
